<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/elevation_a2"
    app:cardCornerRadius="4dp"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    tools:targetApi="lollipop">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_image_frame"
        android:id="@+id/news_poster"
        android:scaleType="fitXY"
        android:contentDescription="@string/news_poster"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_frame_a1"
        android:id="@+id/news_title"
        android:padding="5dp"
        android:fontFamily="serif"
        android:textSize="15sp"
        android:text="@string/title"
        android:background="#0127d4"
        android:textColor="#FFFFFF"
        android:layout_marginTop="@dimen/margin_top_news"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="108dp"
        tools:ignore="MissingConstraints" />

</FrameLayout>
</android.support.v7.widget.CardView>