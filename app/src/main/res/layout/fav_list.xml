<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_width="match_parent"
    tools:targetApi="lollipop">

    <FrameLayout
        android:padding="@dimen/padding_frame_k1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:id="@+id/fav_news_poster"
            android:scaleType="centerCrop"
            android:contentDescription="@string/news_poster"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height_favorite"
            android:id="@+id/fav_news_link"
            android:text="@string/title"
            android:autoLink="web"
            android:layout_marginTop="@dimen/margin_top_text_favorite"
            tools:ignore="MissingConstraints" />

    </FrameLayout>
</android.support.v7.widget.CardView>